<h2>Sign up</h2>

<%= form_with url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="field w-25 mb-2">
    <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder:'First Name'%>
  </div>

  <div class="field w-25 mb-2">
    <%= f.text_field :last_name, class: 'form-control', placeholder:'Last Name' %>
  </div>

  <div class="field w-25 mb-2">
    <%= f.text_field :phone, autocomplete: "phone", class: 'form-control', placeholder:'Phone' %>
  </div>

  <div class="field w-25 mb-2">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder:"Password (#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="field w-25 mb-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder:'Password Confirmation' %>
  </div>

  <div class="actions mb-2">
    <%= f.submit "Sign up", class: 'btn btn-secondary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
