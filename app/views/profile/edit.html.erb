<%= form_for @profile, url: admin_user_path do |f| %>
    <%if @profile.avatar.attached?%>
        <%= cl_image_tag @profile.avatar.key, width: 150, crop: "fill", style: 'margin-bottom: 20px;' %>
    <%end%>
    </br>
    <%= collection_select(:profile, :doctor_speciality_id, DoctorSpeciality.all, :id, :name, prompt: true)%>
    <%= f.file_field :avatar %>
    </br>
    <%= f.submit "Update Doctor", style: 'margin-top: 20px;' %>
<% end %>